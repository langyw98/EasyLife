<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ff00">
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="输入账号"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_account"
        android:paddingBottom="10dp"/>
	<EditText android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/tv_account"
	    android:layout_alignBottom="@id/tv_account"
	    android:layout_marginRight="10dp"
	    android:id="@+id/et_account"/>
	<TextView android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/tv_account"
	    android:layout_alignLeft="@id/tv_account"
	    android:id="@+id/tv_password"
	    android:layout_marginTop="50dp"
	    android:paddingBottom="10dp"
	    android:text="输入密码"/>
	<EditText android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="10dp"
	    android:layout_toRightOf="@id/tv_password"
	    android:layout_alignBottom="@id/tv_password"
	    android:id="@+id/et_password"/>
	<TextView android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/tv_password"
	    android:layout_alignLeft="@id/tv_account"
	    android:id="@+id/tv_confirm"
	    android:layout_marginTop="50dp"
	    android:paddingBottom="10dp"
	    android:text="确认密码"/>
	<EditText android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="10dp"
	    android:layout_toRightOf="@id/tv_confirm"
	    android:layout_alignBottom="@id/tv_confirm"
	    android:id="@+id/et_confirm"/>
	<Button android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:id="@+id/btn_regist"
	    android:layout_below="@id/tv_confirm"
	    android:onClick="BtnOnClick"
	    android:text="注册"
	    android:layout_centerHorizontal="true"/>
</RelativeLayout>
