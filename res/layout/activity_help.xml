<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="@color/listbg"
  >
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/head"
        android:text="帮助"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:gravity="center"
        />
 
  <ScrollView
  	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
  >
  	<LinearLayout
      android:layout_width="fill_parent" 
	  android:layout_height="wrap_content"
	  android:orientation="vertical"
	  android:paddingLeft="10dip"
	  android:paddingRight="15dip"
	  android:gravity="center_horizontal"
  	>
  	  <TextView
  	  	android:layout_width="wrap_content" 
	  	android:layout_height="wrap_content"
	  	android:background="@drawable/list_first"
	  	android:paddingLeft="10dip"
	  	android:text="怎么玩休闲生活？"
	  	android:textSize="16sp"
	  	android:gravity="center_vertical"
  	  />
  	  <TextView
  	  	android:layout_width="wrap_content" 
	  	android:layout_height="wrap_content"
	  	android:background="@drawable/list_middle"
	  	android:paddingLeft="10dip"
	  	android:text="&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;休闲生活是一款都市生活（电影、美食、展览、演出）指南软件。您可以通过本软件找到您感兴趣的活动。"
	  	android:textSize="16sp"
	  	android:gravity="center_vertical"
  	  />
  	  <ImageView
  	  	android:layout_width="398dip" 
	  	android:layout_height="1dp"
	  	android:background="@drawable/divider_line"
  	  />
  	  <TextView
  	  	android:layout_width="wrap_content" 
	  	android:layout_height="wrap_content"
	  	android:background="@drawable/list_middle"
	  	android:paddingLeft="10dip"
	  	android:text="怎么拨打订餐/订票电话？"
	  	android:textSize="16sp"
	  	android:gravity="center_vertical"
  	  />
  	  <TextView
  	  	android:layout_width="wrap_content" 
	  	android:layout_height="wrap_content"
	  	android:background="@drawable/list_middle"
	  	android:paddingLeft="10dip"
	  	android:text="&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;您只需在美食、演出详情界面点击电话按钮即可拨打订餐/订票电话。"
	  	android:textSize="16sp"
	  	android:gravity="center_vertical"
  	  />
  	  <ImageView
  	  	android:layout_width="398dip" 
	  	android:layout_height="1dp"
	  	android:background="@drawable/divider_line"
  	  />
  	  <TextView
  	  	android:layout_width="wrap_content" 
	  	android:layout_height="wrap_content"
	  	android:background="@drawable/list_middle"
	  	android:paddingLeft="10dip"
	  	android:text="怎么收藏活动？"
	  	android:textSize="16sp"
	  	android:gravity="center_vertical"
  	  />
  	  <TextView
  	  	android:layout_width="wrap_content" 
	  	android:layout_height="wrap_content"
	  	android:background="@drawable/list_middle"
	  	android:paddingLeft="10dip"
	  	android:text="&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;您可以使用电影、展览、演出详情界面下方的收藏按钮收藏您感兴趣的活动。在收藏界面可以查看您收藏的活动。"
	  	android:textSize="16sp"
	  	android:gravity="center_vertical"
  	  />
  	  <ImageView
  	  	android:layout_width="398dip" 
	  	android:layout_height="1dp"
	  	android:background="@drawable/divider_line"
  	  />
  	  <TextView
  	  	android:layout_width="wrap_content" 
	  	android:layout_height="wrap_content"
	  	android:background="@drawable/list_middle"
	  	android:paddingLeft="10dip"
	  	android:text="怎么向好友推荐？"
	  	android:textSize="16sp"
	  	android:gravity="center_vertical"
  	  />
  	  <TextView
  	  	android:layout_width="wrap_content" 
	  	android:layout_height="wrap_content"
	  	android:background="@drawable/list_last"
	  	android:paddingLeft="10dip"
	  	android:text="&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;您可以使用电影、展览、演出详情界面下方的推荐按钮向好友发送推荐信息。"
	  	android:textSize="16sp"
	  	android:gravity="center_vertical"
  	  />
  	</LinearLayout>
  </ScrollView>
</LinearLayout>
