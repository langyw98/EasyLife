<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listbg"
    android:orientation="vertical" >

        <TextView
            android:id="@+id/moviename"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@color/title_bg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/textcolor"
            android:layout_alignParentTop="true"
            android:textSize="17sp" />

        <RelativeLayout
            android:id="@+id/movielayout"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_below="@id/moviename"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/photo"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="110dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/photo"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/label"
                    style="@style/textStyle"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/player"
                    style="@style/textStyle"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/time"
                    style="@style/textStyle"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/timelong"
                    style="@style/textStyle"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/movieinfo_title"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/movielayout"
                android:background="@color/title_bg" >

                <TextView
                    android:id="@+id/infotext"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/movieinfo"
                    android:textColor="@color/textcolor"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/movieinfobtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparent"
                    android:src="@drawable/sanjiao_n" />
            </RelativeLayout>

            <TextView
                android:id="@+id/movieinfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movieinfo_title"
                android:layout_marginLeft="5dp"
                android:textColor="@color/textcolor"
                android:textSize="14sp"
                android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/commenttitle"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_below="@id/movieinfo"
            android:layout_marginTop="10dp"
            android:background="@color/title_bg" >

            <TextView
                android:id="@+id/comment_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/moviecomment"
                android:textColor="@color/textcolor"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/commentcount"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@id/comment_text"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="(20)"
                android:textColor="@color/textcolor"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/moviecommentbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"
                android:src="@drawable/sanjiao_n" />
        </RelativeLayout>

</RelativeLayout>