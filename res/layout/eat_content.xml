<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/restaurant"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/textcolor"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/eatlayout"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_below="@id/restaurant"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/restaurant_photo"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_alignBottom="@+id/linearLayout1"
            android:layout_alignTop="@+id/linearLayout1"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/restaurant_photo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/eat_label"
                style="@style/detailStyle"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/eat_address"
                style="@style/detailStyle"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/consume"
                style="@style/detailStyle"
                android:layout_marginTop="5dp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>